---
import type { CollectionEntry } from "astro:content";
import { BASE_RECIPE_URL } from "../const";
type Props = {
  post: CollectionEntry<"oppskrifter">;
  aboveTheFold: boolean;
};
const { post, aboveTheFold } = Astro.props;
---

<a href={`${BASE_RECIPE_URL}/oppskrifter/${post.slug}`}>
  <h2
    class="rounded-full px-4 py-2 text-lg font-semibold first-letter:capitalize hover:underline active:underline"
  >
    {post.data.title}
  </h2>
</a>

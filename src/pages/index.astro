---
import SearchBar from "../components/SearchBar.astro";
import SearchWidget from "../components/SearchWidget.astro";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const oppskrifter = await getCollection("oppskrifter");

const total = oppskrifter.length;
---

<Layout tab_title="Bentes Opskrifter" description="En samling av oppskrifter">
  <div class="flex flex-col text-center">
    <p class="text-xl py-2">
      Dette er et arkiv over oppskrifter som Bente har samlet.
    </p>

    <h3 class="italic text-base pb-4">Det er totalt {total} oppskrifter</h3>

    <SearchWidget />
  </div>
</Layout>

---
import Layout from "../layouts/Layout.astro";
// @ts-ignore
import Search from "astro-pagefind/components/Search";
---

<Layout
  description={`Søk etter oppskrifter`}
  tab_title={`Søk etter oppskrifter`}
  seo_title="Søk etter oppskrifter"
  seo_image=`${Astro.url.origin}/og/search.png`
>
  <link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
  <script src="/pagefind/pagefind-ui.js" is:inline></script>

  <h4 class="mt-2 py-2 text-2xl font-bold">Søk etter oppskrift</h4>
  <Search
    id="search"
    className="pagefind-ui pb-4"
    uiOptions={{ showImages: false }}
  />
</Layout>

<style is:global>
  nav {
    display: grid;
    place-items: center;
  }

  .pagefind-ui {
    --pagefind-ui-scale: 0.9;
    --pagefind-ui-primary: navy;
    --pagefind-ui-text: black;
    --pagefind-ui-border: slategrey;
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: 0.25rem;
    --pagefind-ui-font: Atkinson-Hyperlegible;

    max-width: 100%;
  }

  .pagefind-ui .pagefind-ui__drawer:not(.pagefind-ui__hidden) {
    position: absolute;
    left: 0;
    right: 0;
    margin-top: 0px;
    z-index: 9999;
    padding: 0 2em 1em;
    overflow-y: auto;
    box-shadow:
      0 10px 10px -5px rgba(0, 0, 0, 0.2),
      0 2px 2px 0 rgba(0, 0, 0, 0.1);
    border-bottom-right-radius: var(--pagefind-ui-border-radius);
    border-bottom-left-radius: var(--pagefind-ui-border-radius);
    background-color: var(--pagefind-ui-background);
  }

  .pagefind-ui .pagefind-ui__result-link {
    color: var(--pagefind-ui-primary);
  }

  .pagefind-ui .pagefind-ui__result-excerpt {
    color: var(--pagefind-ui-text);
  }
</style>
